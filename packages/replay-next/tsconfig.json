{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "../",
    "paths": {
      "design/*": ["../design/*"],
      "protocol/*": ["../protocol/*"],
      "shared/*": ["../shared/*"],
      "@codemirror/lang-javascript": ["@codemirror/lang-javascript_replay_next"],
      "@codemirror/language": ["@codemirror/language_replay_next"],
      "@codemirror/state": ["@codemirror/state_replay_next"],
      "@lezer/common": ["@lezer/common_replay_next"],
      "@lezer/highlight": ["@lezer/highlight_replay_next"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../node_modules/design/**/*.ts",
    "../../node_modules/design/**/*.tsx",
    "../../node_modules/protocol/**/*.ts",
    "../../node_modules/protocol/**/*.tsx",
    "../../node_modules/shared/**/*.ts",
    "../../node_modules/shared/**/*.tsx",
    "../design/**/*.ts,tsx",
    "../design/**/*.tsx",
    "../protocol/**/*.ts,tsx",
    "../protocol/**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*.tsx"
  ],
  "exclude": []
}
